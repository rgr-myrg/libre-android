<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	android:id="@+id/book_detail_card_view"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/minimal_layout_size"
	android:elevation="@dimen/cardview_elevation"
	app:layout_anchorGravity="bottom"
	app:cardUseCompatPadding="true"
	app:contentPaddingBottom="@dimen/maximum_content_padding"
	card_view:contentPadding="@dimen/minimal_content_padding">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="bottom">

		<TextView
			android:id="@+id/section_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/Base.TextAppearance.AppCompat.Headline"
			android:textColor="@color/colorGray"
			android:textStyle="bold"
			android:paddingRight="@dimen/default_space"
			android:text="@string/arrow_character"/>

		<TextView
			android:id="@+id/section_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			style="@style/Base.TextAppearance.AppCompat.Medium"/>

		<ImageView
			android:id="@+id/section_status"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="right"
			android:visibility="invisible"
			android:src="@drawable/ic_check_circle_black_24dp"/>

	</LinearLayout>
</android.support.v7.widget.CardView>