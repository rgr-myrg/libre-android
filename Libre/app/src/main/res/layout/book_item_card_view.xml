<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	android:id="@+id/book_card_view"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/minimal_layout_size"
	android:elevation="@dimen/cardview_elevation"
	app:layout_anchorGravity="bottom"
	card_view:contentPadding="@dimen/default_content_padding">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/book_cover_image"
			android:layout_width="@dimen/book_cover_width"
			android:layout_height="@dimen/book_cover_height"/>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
			android:orientation="vertical">
			<TextView
				android:id="@+id/book_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Book Title"
				style="@style/Base.TextAppearance.AppCompat.Headline"/>
			<TextView
				android:id="@+id/book_author"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Book Author"
				style="@style/Base.TextAppearance.AppCompat.Medium"/>
		</LinearLayout>
	</LinearLayout>
</android.support.v7.widget.CardView>